{
    "npmClient": "yarn",
    "useNx": true,
    "packages": [
        "packages/*"
    ],
    "version": "2.8.0",
    "useWorkspaces": true,
    "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
    ],
    "command": {
        "publish": {
            "conventionalCommits": true,
            "verifyAccess": false,
            "graphType": "all"
        },
        "version": {
            "allowBranch": [
                "main"
            ]
        }
    }
}
