{
    "packages": {
        ".": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "bump-minor-pre-major": false,
            "bump-patch-for-minor-pre-major": false,
            "draft": false,
            "prerelease": false,
            "always-link-local": true,
            "include-v-in-tag": false,
            "extra-files": [
                {
                    "type": "json",
                    "path": "**/lerna.json",
                    "glob": true,
                    "jsonpath": "version"
                }
            ],
            "plugins": ["node-workspace"]
        }
    }
}
