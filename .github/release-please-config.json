{
    "release-type": "node",
    "plugins": [{
        "type": "node-workspace",
        "updateAllPackages":  true
    }],
    "always-link-local": true,
    "packages": {
        ".": {
            "changelog-path": "CHANGELOG.md",

            "bump-minor-pre-major": false,
            "bump-patch-for-minor-pre-major": false,
            "draft": false,
            "prerelease": false,
            "include-v-in-tag": false,
            "extra-files": [
                {
                    "type": "json",
                    "path": "**/lerna.json",
                    "glob": true,
                    "jsonpath": "version"
                }
            ]
        }
    }
}
